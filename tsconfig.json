{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "jsx": "react-jsx",
    "outDir": "dist",
    "rootDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true
  },
  "include": ["src/**/*", "server/**/*", "main/**/*", "shared/**/*"],
  "exclude": ["node_modules", "src/main.tsx", "src/App.tsx", "src/index.css", "src/components", "src/pages", "src/data"]
}
